@model WHRoom.Models.Auth.Login


<div class="row">
   
    <div class="col-sm-2">
       
        @using (Html.BeginForm("Login", "Auth"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Michael Crump", required = "required" })
            </div>
           
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required" })
            </div>
          
            <button type="submit" class="btn btn-primary">Log-in</button>
        }

        <strong>@Html.DisplayFor(m => m.result)</strong><br />
        <br />
       
    </div>
    <div>
        @using (Html.BeginForm("LoginwithOtp", "Auth"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Michael Crump", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.OTP)
                @Html.TextBoxFor(m => m.OTP, new { @class = "form-control", required = "required" })
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit OTP</button>


            <br />
            <br />
        }
        <strong>@Html.DisplayFor(m => m.OTPres)</strong>
    </div>
</div>